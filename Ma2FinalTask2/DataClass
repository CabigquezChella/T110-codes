package package2;

import package3.methods;

import java.util.Scanner;

public class subclass extends methods {
    private int Choices;
   Scanner print=new Scanner(System.in);
    methods way=new methods();

    public void  setChoices(int choices){
        this.Choices=choices;

        switch (Choices){
            case 1:
                System.out.println(" ");
                way.Triangle();
              break;
            case 2:
                System.out.println(" ");
                way.Rectangle();
                break;
            case 3:
                System.out.println(" ");
                way.Parallelogram();
                break;
            case 4:
                System.out.println(" ");
                way.Circle();
                break;
        }
    }
}
